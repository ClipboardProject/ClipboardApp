{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "NodeAttach",
            "type": "node",
            "request": "attach",
            "port": 5859,
            "address": "localhost", //docker toolbox users will likely need to use 192.168.99.100 
            "restart": true,
            "sourceMaps": true,
            "localRoot": "${workspaceRoot}",
            "remoteRoot": "/usr/src/app/in2it_site",
            "protocol": "inspector",
            "outFiles": [ "${workspaceRoot}/.nuxt/**/*.js" ]
        }
    ]
}